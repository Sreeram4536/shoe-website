<%- include("../partials/admin/header") %>

<!DOCTYPE html>
<html>
<head>
    <title>Inventory Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1>Inventory Management</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% products.forEach(product => { %>
            <tr>
                <td><%= product.productName %></td>
                <td>
                    <!-- Form to update quantity -->
                    <form action="/admin/inventory/<%= product._id %>/update" method="POST" class="d-inline">
                        <input type="number" name="quantity" value="<%= product.quantity %>" class="form-control form-control-sm" style="width: 80px;" required>
                        <button type="submit" class="btn btn-sm btn-success mt-2">Update</button>
                    </form>
                </td>
                <td><%= product.status %></td>
                <td>â‚¹<%= product.salePrice %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<%- include("../partials/admin/footer") %>
</body>
</html>
