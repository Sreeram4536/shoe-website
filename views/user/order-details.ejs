  <div class="container mt-5" style="margin-top: 60px; margin-bottom: 60px;  min-height: 100vh">
    <h1 class="text-center mb-4">My Orders</h1>

    <% if (orders.length === 0) { %>
      <div class="alert alert-info text-center" role="alert">
        <%= message %>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Date</th>
              <th>Status</th>
              <th>Total Amount</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><%= order.orderId %></td>
                <td><%= new Date(order.invoiceDate).toLocaleDateString() %></td>
                <td><%= order.status %></td>
                <td>â‚¹<%= order.finalAmount %></td>
                <td>
                  <a href="/user/order/<%= order._id %>" class="btn btn-primary btn-sm">
                    View Details
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
