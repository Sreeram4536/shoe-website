<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Order Details</h1>

        <% if (order) { %>
        <div class="card shadow-lg">
            <div class="card-body">
                <h5 class="card-title">Order ID: <%= order._id %></h5>
                <p class="card-text">
                    <strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleString() %><br>
                    <strong>Status:</strong> 
                    <span class="badge <%= order.status === 'Cancelled' ? 'bg-danger' : 'bg-success' %>">
                        <%= order.status %>
                    </span>
                </p>

                <hr>

                <!-- <h5>Shipping Address</h5>
                <p>
                    <strong>Name:</strong> </%= order.address[0].name %><br>
                    <strong>City:</strong> </%= order.address[0].city %><br>
                    <strong>State:</strong> </%= order.address[0].state %><br>
                    <strong>Pincode:</strong> </%= order.address[0].pincode %><br>
                    <strong>Phone:</strong> </%= order.address[0].phone %>
                </p> -->

                <hr>

                <h5>Ordered Items</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let totalAmount = 0; %>
                        <% order.orderedItems.forEach(item => { %>
                        <% let subtotal = item.quantity * item.product.salePrice; %>
                        <% totalAmount += subtotal; %>
                        <tr>
                            <td><%= item.product.productName %></td>
                            <td><%= item.quantity %></td>
                            <td>&#8377;<%= item.product.salePrice.toFixed(2) %></td>
                            <td>&#8377;<%= subtotal.toFixed(2) %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <div class="text-end">
                    <h5>Total Amount: &#8377;<%= totalAmount.toFixed(2) %></h5>
                </div>

                <% if (order.status === 'Pending') { %>
                <div class="mt-4 text-center">
                    <a href="/user/order/<%= order._id %>/cancel" class="btn btn-danger">
                        Cancel Order
                    </a>
                </div>
                <% } %>
            </div>
        </div>
        <% } else { %>
        <div class="alert alert-warning text-center">
            No order details available.
        </div>
        <% } %>

        <div class="mt-3 text-center">
            <a href="/user/orders" class="btn btn-secondary">Back to All Orders</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
