<%- include("../partials/user/header") %>

<style>
  .card-green {
    background-color: #ADD8E6;
  }

  .main {
    padding: 30px 0;
  }

  .dashboard-menu {
    background-color: #cce3e6;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .dashboard-menu .nav-link {
    font-weight: bold;
    color: #30683c;
    transition: box-shadow 0.3s ease;
    padding: 10px 15px;
    margin-bottom: 5px;
    display: block;
    text-decoration: none;
  }

  .dashboard-menu .nav-link:hover,
  .dashboard-menu li.active .nav-link {
    background-color: #487379;
    color: white;
    border-radius: 5px;
  }

  .card {
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    margin-bottom: 20px;
  }

  .panel {
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    background-color: white;
  }

  .panel-heading {
    background-color: #487379;
    color: white;
    border-radius: 10px 10px 0 0;
    padding: 15px;
  }

  .panel-body {
    padding: 20px;
  }

  .btn-success {
    background-color: #577194;
    border-color: #6bb87d;
  }

  .btn-success:hover {
    background-color: #506955;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .required {
    color: red;
  }

  /* Breadcrumb styles */
  .page-header.breadcrumb-wrap {
    background-color: #eee2e9;
    padding: 15px 0;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    font-family: 'Arial', sans-serif;
    font-size: 16px;
    color: #121311;
  }

  .breadcrumb a {
    color: #007bff;
    text-decoration: none;
    margin: 0 5px;
  }

  .breadcrumb a:hover {
    color: #0056b3;
  }

  /* Order styles */
  .order-details {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 15px;
  }

  .order-product {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #eee;
  }

  .order-product img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 5px;
    margin-right: 15px;
  }

  .order-status {
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 12px;
    font-weight: bold;
  }

  .status-delivered { background: #d4edda; color: #155724; }
  .status-processing { background: #fff3cd; color: #856404; }
  .status-cancelled { background: #f8d7da; color: #721c24; }

  /* Tab pane styles */
  .tab-pane {
    display: none;
  }

  .tab-pane.active.in {
    display: block;
  }

  /* Add transition for smooth tab switching */
  .tab-content > .tab-pane {
    transition: all 0.3s ease-in-out;
  }

  @media (max-width: 768px) {
    .dashboard-menu {
      padding: 10px;
    }

    .card {
      margin-bottom: 15px;
    }
  }

  /* Wallet Balance Card Styles */
  .wallet-balance-card {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border-radius: 15px;
    padding: 25px;
    color: white;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
  }

  .balance-header {
    text-align: center;
    margin-bottom: 15px;
  }

  .balance-label {
    display: block;
    font-size: 1rem;
    margin-bottom: 10px;
    opacity: 0.9;
  }

  .balance-amount {
    font-size: 2.5rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
  }

  .balance-amount i {
    font-size: 2rem;
  }

  .balance-footer {
    text-align: center;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Add Money Section Styles */
  .add-money-section {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 20px;
    margin-top: 20px;
  }

  .section-title {
    color: #495057;
    font-weight: 600;
  }

  .input-group {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.08);
  }

  .input-group-text {
    background-color: #e9ecef;
    color: #495057;
    font-weight: 600;
  }

  .btn-primary {
    padding: 8px 20px;
  }

  /* Responsive Adjustments */
  @media (max-width: 576px) {
    .wallet-balance-card {
      padding: 20px;
    }

    .balance-amount {
      font-size: 2rem;
    }

    .balance-amount i {
      font-size: 1.5rem;
    }
  }
</style>

<main class="main">
  <!-- Breadcrumb section -->
  <div class="page-header breadcrumb-wrap mb-3">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Profile <span></span> Account
      </div>
    </div>
  </div>

  <section class="pt-10 pb-10">
    <div class="container">
      <div class="row">
        <!-- Left sidebar menu -->
        <div class="col-md-4">
          <div class="dashboard-menu">
            <ul class="nav nav-pills nav-stacked">
              <li class="active">
                <a href="#dashboard" data-toggle="tab">
                  <i class="glyphicon glyphicon-cog"></i> Dashboard
                </a>
              </li>
              <li>
                <a href="#address" data-toggle="tab">
                  <i class="glyphicon glyphicon-map-marker"></i> My Address
                </a>
              </li>
              <li>
                <a href="#orders" data-toggle="tab">
                  <i class="glyphicon glyphicon-shopping-cart"></i> Orders
                </a>
              </li>
              <li>
                <a href="#track-orders" data-toggle="tab">
                  <i class="glyphicon glyphicon-credit-card"></i> Wallet Status
                </a>
              </li>
              <li>
                <a href="#wallet-history" data-toggle="tab">
                  <i class="glyphicon glyphicon-time"></i> Wallet History
                </a>
              </li>
              <li>
                <a href="#referal" data-toggle="tab">
                  <i class="glyphicon glyphicon-gift"></i> Referrals
                </a>
              </li>
              <li>
                <a href="/logout">
                  <i class="glyphicon glyphicon-log-out"></i> Logout
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Right content area -->
        <div class="col-md-8">
          <div class="tab-content">
            <!-- Dashboard Tab -->
            <div class="tab-pane fade in active" id="dashboard">
              <div class="panel">
                <div class="panel-heading">
                  <h5 class="panel-title text-center">User Profile</h5>
                </div>
                <div class="panel-body text-center">
                  <h5><%= user.name %></h5>
                  <p><strong>Phone:</strong> <%= user.phone %></p>
                  <p><strong>Email:</strong> <%= user.email %></p>
                  <a href="/user/change-email" class="btn btn-success btn-sm">Change Email</a>
                  <a href="/user/change-password" class="btn btn-success btn-sm">Change Password</a>
                </div>
              </div>
            </div>

            <!-- Address Tab -->
            <div class="tab-pane fade" id="address">
              <div class="row">
                <% if(userAddress){ %>
                  <% userAddress.address.forEach((address)=>{ %>
                    <div class="col-sm-6">
                      <div class="panel">
                        <div class="panel-heading">
                          <h5 class="panel-title"><%= address.addressType %></h5>
                        </div>
                        <div class="panel-body">
                          <address>
                            <%= address.name %><br/>
                            <%= address.city %><br/>
                            <%= address.landMark %><br/>
                            <%= address.state %>
                          </address>
                          <p>PIN: <%= address.pincode %></p>
                          <p>Phone: <%= address.phone %></p>
                          <p>Alt Phone: <%= address.altPhone %></p>
                          <div class="row">
                            <div class="col-xs-6">
                              <a href="/user/editAddress?id=<%= address._id %>" class="btn btn-success btn-block">Edit</a>
                            </div>
                            <div class="col-xs-6">
                              <a href="/user/deleteAddress?id=<%= address._id %>" class="btn btn-danger btn-block" 
                                 onclick="return confirm('Are you sure you want to delete this address?')">Delete</a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                <% } else { %>
                  <div class="col-sm-12">
                    <div class="panel">
                      <div class="panel-body text-center">
                        <p>No addresses found</p>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
              <div class="text-center mt-3">
                <a href="/user/addAddress" class="btn btn-primary btn-lg">Add Address</a>
              </div>
            </div>

            <!-- Orders Tab -->
            <div class="tab-pane fade" id="orders">
              <div class="panel">
                <div class="panel-heading">
                  <h5 class="panel-title">Your Orders</h5>
                </div>
                <div class="panel-body">
                  <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                      <div class="order-details">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                          <h6>Order #<%= order.orderId %></h6>
                          <span class="order-status status-<%= order.status.toLowerCase() %>">
                            <%= order.status %>
                          </span>
                        </div>
                        
                        <% order.orderedItems.forEach(item => { %>
                          <div class="order-product">
                            <img src="/uploads/product-images/<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>">
                            <div>
                              <h6><%= item.product.productName %></h6>
                              <p class="mb-1">Quantity: <%= item.quantity %></p>
                              <p class="mb-0">Price: ₹<%= item.price %></p>
                            </div>
                          </div>
                        <% }) %>
                        
                        <div class="mt-3">
                          <p class="mb-1"><strong>Delivery Address:</strong></p>
                          <% if (order.deliveryAddress) { %>
                            <p class="mb-1"><%= order.deliveryAddress.name %></p>
                            <p class="mb-1"><%= order.deliveryAddress.city %></p>
                            <p class="mb-1"><%= order.deliveryAddress.state %></p>
                            <p class="mb-1">PIN: <%= order.deliveryAddress.pincode %></p>
                          <% } else { %>
                            <p class="mb-1">Address not found</p>
                          <% } %>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-3">
                          <p class="mb-0"><strong>Order Total:</strong> ₹<%= order.finalAmount %></p>
                          <p class="mb-0"><strong>Ordered On:</strong> <%= new Date(order.createdOn).toLocaleDateString() %></p>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <div class="text-center py-4">
                      <p>No orders found</p>
                      <a href="/shop" class="btn btn-primary">Start Shopping</a>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>

            <!-- Other tabs with similar structure -->
            <!-- Wallet Status Tab -->
            <div class="tab-pane fade" id="track-orders">
              <div class="panel">
                <div class="panel-heading">
                  <h5 class="panel-title">
                    <i class="fas fa-wallet me-2"></i>Wallet Status
                  </h5>
                </div>
                <div class="panel-body">
                  <!-- Wallet Balance Card -->
                  <div class="wallet-balance-card mb-4">
                    <div class="balance-header">
                      <span class="balance-label">Available Balance</span>
                      <div class="balance-amount">
                        <i class="fas fa-rupee-sign"></i>
                        <span class="amount"><%= walletData.balance || 0 %></span>
                      </div>
                    </div>
                    <div class="balance-footer">
                      <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        You can use this balance for your purchases
                      </small>
                    </div>
                  </div>

                  <!-- Add Money Section -->
                  <!-- <div class="add-money-section">
                    <h6 class="section-title mb-3">Add Money to Wallet</h6>
                    <div class="input-group mb-3">
                      <span class="input-group-text">₹</span>
                      <input type="number" 
                             class="form-control" 
                             id="walletAmount" 
                             placeholder="Enter amount"
                             min="1">
                      <button class="btn btn-primary" type="button">
                        <i class="fas fa-plus-circle me-2"></i>Add
                      </button>
                    </div>
                  </div> -->
                </div>
              </div>
            </div>

            <!-- Wallet History Tab -->
            <div class="tab-pane fade" id="wallet-history">
              <div class="panel">
                <div class="panel-heading">
                  <h5 class="panel-title">Wallet History</h5>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Transaction ID</th>
                          <th>Description</th>
                          <th>Amount</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (walletData && walletData.transactions && walletData.transactions.length > 0) { %>
                          <% walletData.transactions.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)); %>
                          <% walletData.transactions.forEach(transaction => { %>
                            <tr>
                              <td><%= new Date(transaction.createdAt).toLocaleDateString() %></td>
                              
                              <td><small class="text-muted"><%= transaction.transactionId %></small></td>
                              <td><%= transaction.description %></td>
                              <td class="<%= transaction.type === 'Credit' ? 'text-success' : 'text-danger' %>">
                                <strong><%= transaction.type === 'Credit' ? '+' : '-' %>₹<%= transaction.amount %></strong>
                              </td>
                              <td>
                                <span class="badge bg-success rounded-pill">
                                  <%= transaction.status %>
                                </span>
                              </td>
                            </tr>
                          <% }); %>
                        <% } else { %>
                          <tr>
                            <td colspan="5" class="text-center">No transactions found</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <!-- Referral Tab -->
            <div class="tab-pane fade" id="referal">
              <div class="panel">
                <div class="panel-heading">
                  <h5 class="panel-title">Referral</h5>
                </div>
                <div class="panel-body">
                  <h6>Refer your friends and earn money!</h6>
                  <p>Share this link: <strong>[Referral Link]</strong></p>
                  <p>Earned: ₹0</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>


<script>
document.addEventListener('DOMContentLoaded', function() {
    const tabLinks = document.querySelectorAll('[data-toggle="tab"]');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    // First, ensure dashboard is active by default
    document.querySelector('#dashboard').classList.add('in', 'active');
    document.querySelector('a[href="#dashboard"]').parentElement.classList.add('active');
    
    tabLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all tabs and panes
            tabLinks.forEach(l => l.parentElement.classList.remove('active'));
            tabPanes.forEach(p => {
                p.classList.remove('in', 'active');
            });
            
            // Add active class to clicked tab
            this.parentElement.classList.add('active');
            
            // Show corresponding pane
            const targetId = this.getAttribute('href');
            const targetPane = document.querySelector(targetId);
            if (targetPane) {
                targetPane.classList.add('in', 'active');
            }
        });
    });
});

document.addEventListener('DOMContentLoaded', function() {
    // Check if there is a success message in the URL
    const urlParams = new URLSearchParams(window.location.search);
    const successMessage = urlParams.get('success');

    if (successMessage) {
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: successMessage,
            showConfirmButton: true
        });
    }
});

</script>



